/**
 * 整个站点的核心$7EC4件
 * 将Notion数据$6E32染成网$9875
 * @param {*} param0
 * @returns
 */
const NotionPage = ({ post, className }) => {
  // 是否$5173$95ED数据$5E93和画册的点$51FB跳$8F6C
  const POST_DISABLE_GALLERY_CLICK = siteConfig('POST_DISABLE_GALLERY_CLICK')
  const POST_DISABLE_DATABASE_CLICK = siteConfig('POST_DISABLE_DATABASE_CLICK')
  const SPOILER_TEXT_TAG = siteConfig('SPOILER_TEXT_TAG')

  const zoom =
    isBrowser &&
    mediumZoom({
      //   container: '.notion-viewport',
      background: 'rgba(0, 0, 0, 0.2)',
      margin: getMediumZoomMargin()
    })

  const zoomRef = useRef(zoom ? zoom.clone() : null)
  const IMAGE_ZOOM_IN_WIDTH = siteConfig('IMAGE_ZOOM_IN_WIDTH', 1200)
  // $9875面首次打$5F00$65F6$6267行的勾子
  useEffect(() => {
    // $68C0$6D4B当前的url并自$52A8$6EDA$52A8到$5BF9$5E94目$6807
    autoScrollToHash()
  }, [])

  // $9875面文章$53D1生$53D8化$65F6会$6267行的勾子
  useEffect(() => {
    // 相册$89C6$56FE点$51FB禁止跳$8F6C，只能放大$67E5看$56FE片
    if (POST_DISABLE_GALLERY_CLICK) {
      // $9488$5BF9$9875面中的gallery$89C6$56FE，点$51FB后是放大$56FE片$8FD8是跳$8F6C到gallery的内部$9875面
      processGalleryImg(zoomRef?.current)
    }

    // $9875内数据$5E93点$51FB禁止跳$8F6C，只能$67E5看
    if (POST_DISABLE_DATABASE_CLICK) {
      processDisableDatabaseUrl()
    }

    /**
     * 放大$67E5看$56FE片$65F6替$6362成高清$56FE像
     */
    const observer = new MutationObserver((mutationsList, observer) => {
      mutationsList.forEach(mutation => {
        if (
          mutation.type === 'attributes' &&
          mutation.attributeName === 'class'
        ) {
          if (mutation.target.classList.contains('medium-zoom-image--opened')) {
            // 等待$52A8画完成后替$6362$4E3A更高清的$56FE像
            setTimeout(() => {
              // $83B7取$8BE5元素的 src 属性
              const src = mutation?.target?.getAttribute('src')
              //   替$6362$4E3A更高清的$56FE像
              mutation?.target?.setAttribute(
                'src',
                compressImage(src, IMAGE_ZOOM_IN_WIDTH)
              )
            }, 800)
          }
        }
      })
    })

    // $76D1$89C6$9875面元素和属性$53D8化
    observer.observe(document.body, {
      attributes: true,
      subtree: true,
      attributeFilter: ['class']
    })

    return () => {
      observer.disconnect()
    }
  }, [post])

  useEffect(() => {
    // Spoiler文本功能
    if (SPOILER_TEXT_TAG) {
      import('lodash/escapeRegExp').then(escapeRegExp => {
        Promise.all([
          loadExternalResource('/js/spoilerText.js', 'js'),
          loadExternalResource('/css/spoiler-text.css', 'css')
        ]).then(() => {
          window.textToSpoiler &&
            window.textToSpoiler(escapeRegExp.default(SPOILER_TEXT_TAG))
        })
      })
    }

    // $67E5找所有具有 'notion-collection-page-properties' $7C7B的元素,$5220除notion自$5E26的$9875面properties
    const timer = setTimeout(() => {
      // $67E5找所有具有 'notion-collection-page-properties' $7C7B的元素
      const elements = document.querySelectorAll(
        '.notion-collection-page-properties'
      )

      // 遍$5386$8FD9些元素并将其从 DOM 中移除
      elements?.forEach(element => {
        element?.remove()
      })
    }, 1000) // 1000 毫秒 = 1 秒

    // 清理定$65F6器，防止$7EC4件卸$8F7D$65F6$6267行
    return () => clearTimeout(timer)
  }, [post])

  return (
    <div
      id='notion-article'
      className={`mx-auto overflow-hidden ${className || ''}`}>
      <NotionRenderer
        recordMap={post?.blockMap}
        mapPageUrl={mapPageUrl}
        mapImageUrl={mapImgUrl}
        components={{
          Code,
          Collection,
          Equation,
          Modal,
          Pdf,
          Tweet
        }}
      />

      <AdEmbed />
      <PrismMac />
    </div>
  )
}

/**
 * $9875面的数据$5E93$94FE接禁止跳$8F6C，只能$67E5看
 */
const processDisableDatabaseUrl = () => {
  if (isBrowser) {
    const links = document.querySelectorAll('.notion-table a')
    for (const e of links) {
      e.removeAttribute('href')
    }
  }
}

/**
 * gallery$89C6$56FE，点$51FB后是放大$56FE片$8FD8是跳$8F6C到gallery的内部$9875面
 */
const processGalleryImg = zoom => {
  setTimeout(() => {
    if (isBrowser) {
      const imgList = document?.querySelectorAll(
        '.notion-collection-card-cover img'
      )
      if (imgList && zoom) {
        for (let i = 0; i < imgList.length; i++) {
          zoom.attach(imgList[i])
        }
      }

      const cards = document.getElementsByClassName('notion-collection-card')
      for (const e of cards) {
        e.removeAttribute('href')
      }
    }
  }, 800)
}

/**
 * 根据url参数自$52A8$6EDA$52A8到$951A位置
 */
const autoScrollToHash = () => {
  setTimeout(() => {
    // 跳$8F6C到指定$6807$9898
    const hash = window?.location?.hash
    const needToJumpToTitle = hash && hash.length > 0
    if (needToJumpToTitle) {
      console.log('jump to hash', hash)
      const tocNode = document.getElementById(hash.substring(1))
      if (tocNode && tocNode?.className?.indexOf('notion') > -1) {
        tocNode.scrollIntoView({ block: 'start', behavior: 'smooth' })
      }
    }
  }, 180)
}

/**
 * 将id映射成博文内部$94FE接。
 * @param {*} id
 * @returns
 */
const mapPageUrl = id => {
  // return 'https://www.notion.so/' + id.replace(/-/g, '')
  return '/' + id.replace(/-/g, '')
}

/**
 * $7F29放
 * @returns
 */
function getMediumZoomMargin() {
  const width = window.innerWidth

  if (width < 500) {
    return 8
  } else if (width < 800) {
    return 20
  } else if (width < 1280) {
    return 30
  } else if (width < 1600) {
    return 40
  } else if (width < 1920) {
    return 48
  } else {
    return 72
  }
}

